
<div class="container">
    <div class="row">
        <div class="col s12">
            <h1>GOT THEM CHEESEBURGERS</h1>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m6">
            <h2>Burgers NOT Devoured</h2>
            <div class="row">
                <div class="col s12 grey" id="burgers-not-devoured">
                    <ul>
                        {{#each burger}}
                            {{#unless devoured}}
                                {{> burger/burger-block devour=true}}
                            {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>

        </div>
        <div class="col s12 m6">
            <h2>Burgers Devoured!</h2>
            <div class="row">
                <div class="col s12 blue-grey" id="burgers-is-devoured">
                    <ul>
                        {{#each burger}}
                            {{#if devoured}}
                                {{> burger/burger-block devour=false}}
                            {{/if}}
                        {{/each}}
                    </ul>

                </div>
            </div>
            
        </div>
    </div>
</div>